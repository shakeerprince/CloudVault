generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum roles {
  CUSTOMER
  MECHANIC
  ADMIN
}

model users {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  username  String           @unique
  password  String
  role      roles
  is_active Boolean          @default(true)
  provider  providers?
  files     uploaded_files[]
  createdAt DateTime         @default(now())
  updatedAt DateTime?        @default(now())

  @@map("users")
}

model uploaded_files {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      users    @relation(fields: [userId], references: [id])
  fileName  String
  fileKey   String   @unique
  fileUrl   String
  fileSize  Int
  fileType  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("uploaded_files")
}

model states {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  code      String      @unique
  cities    cities[]
  providers providers[]
  createdAt DateTime    @default(now())
  updatedAt DateTime?   @default(now())

  @@map("states")
}

model cities {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  state_id  String      @db.ObjectId
  state     states      @relation(fields: [state_id], references: [id])
  providers providers[]
  createdAt DateTime    @default(now())
  updatedAt DateTime?   @default(now())

  @@map("cities")
}

enum provider_status {
  PENDING
  APPROVED
  REJECTED
}

model providers {
  id                String               @id @default(auto()) @map("_id") @db.ObjectId
  user_id           String               @unique @db.ObjectId
  user              users                @relation(fields: [user_id], references: [id])
  name              String
  email             String               @unique
  phone             String
  address           String
  state_id          String               @db.ObjectId
  state             states               @relation(fields: [state_id], references: [id])
  city_id           String               @db.ObjectId
  city              cities               @relation(fields: [city_id], references: [id])
  service_distance  Float
  latitude          Float
  longitude         Float
  otp               String               @default("")
  status            provider_status      @default(PENDING)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime?            @default(now())
  providerDocuments provider_documents[]

  @@map("providers")
}

model provider_documents {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  provider_id   String    @db.ObjectId
  provider      providers @relation(fields: [provider_id], references: [id])
  document_url  String
  document_type String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @default(now())

  @@map("provider_documents")
}
